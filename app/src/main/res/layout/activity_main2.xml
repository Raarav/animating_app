<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/changeimage4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.2"
        android:src="@drawable/hulk" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate!"
            android:gravity="center"
            android:textSize="25dp"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/changeimage2"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:onClick="translateX"
            android:src="@drawable/doctor_strenge" />



        <ImageView
            android:id="@+id/changeimage3"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:onClick="translateY"
            android:src="@drawable/thor" />


            </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_gravity="center"
            android:onClick="nextactivity"/>
    </LinearLayout>
</RelativeLayout>